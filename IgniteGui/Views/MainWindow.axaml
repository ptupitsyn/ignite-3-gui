<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IgniteGui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="IgniteGui.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="IgniteGui"
        x:DataType="vm:MainWindowViewModel"
        x:CompileBindings="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel>
        <Grid ColumnDefinitions="*, 150" IsEnabled="{Binding !IsLoading}">
            <TextBox Text="{Binding ConnectionString, Mode=TwoWay}" Grid.Column="0" Margin="5" />
            <Button Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="5" Command="{Binding ConnectCommand}">
                <Panel>
                    <TextBlock Text="Disconnect" IsVisible="{Binding IsConnected}" />
                    <TextBlock Text="Connect" IsVisible="{Binding !IsConnected}" />
                </Panel>
            </Button>
        </Grid>
        <TextBlock Text="{Binding Status}" Margin="5" />
    </StackPanel>

</Window>
